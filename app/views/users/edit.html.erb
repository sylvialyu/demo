<h2>Edit User</h2>

<%= simple_form_for @user do |f| %>

  <div class="form-group">
    <%= f.input :avatar %>
  </div>

  <div class="form-group">
    <%= f.input :username %>
  </div>

  <div class="form-group">
    <%= f.input :gender %>
  </div>

  <div class="form-group">
    <%= f.input :email %>
  </div>

  <div class="form-group">
    <%= f.submit "Save", :class => "btn btn-primary" %>
  </div>

<% end %>
