<div class="sign-container">
	<div class="box left">
		<ul class="nav nav-tabs">
			<li role="presentation" class="active"><a href="#login" aria-controls="login" role="tab" data-toggle="tab">Log in</a></li>
			<li role="presentation"><a href="#register" aria-controls="register" role="tab" data-toggle="tab">Register</a></li>
		</ul>
		 <div class="tab-content">

       <div role="tabpanel" class="tab-pane active" id="login">
         <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

            <div class="form-inputs">
              <%= f.text_field :email, placeholder: "Email", label:false, required: false, autofocus: true %>
              <%= f.password_field :password, placeholder: "Password", label:false, required: false %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.submit "Log in", class: "submit"%>
              <%= link_to "Forgot your password?", new_password_path(resource_name), class: "extra-link" %><br />
            </div>
         <% end %>
       </div>

		    <div role="tabpanel" class="tab-pane info sign-info" id="register">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

  				  <div class="form-inputs">
              <div class="form-group">
                <%= f.text_field :email, placeholder: "Email", required: true, autofocus: true %>
                <div class="help-block with-errors"></div>
              </div>
              <div class="form-group">
                <%= f.text_field :username, placeholder: "User Name", required: true %>
                <div class="help-block with-errors"></div>
              </div>
              <div class="form-group">
                <%= f.password_field :password, placeholder: "Password", required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                <div class="help-block with-errors"></div>
              </div>
              <div class="form-group">
                <%= f.password_field :password_confirmation, placeholder: "Confirm your password", required: true %>
                <div class="help-block with-errors"></div>
              </div>
  				  </div>

  				  <div class="form-actions">
  				    <%= f.submit "Create a Free Account", class: "submit" %>
  				    <a href="#" class="extra-link"><%= t("sign.read_term") %></a>
  				  </div>

  				<% end %>
		    </div>

		 </div>
	</div>

	<div class="box right">
	    <div class="info signin-info">
	      <span class="sign-via">其它方式登录</span>
	      <%= link_to user_google_oauth2_omniauth_authorize_path do %>
	      	<button class="social-network facebook"><i class="fa fa-google" aria-hidden="true"></i>Google</button>
	      <% end %>
	      <%= link_to user_facebook_omniauth_authorize_path do %>
	      	<button class="social-network twitter"><i class="fa fa-facebook" aria-hidden="true"></i>Facebook</button>
	      <% end %>


	      <!-- <button class="social-network google"><i class="fa fa-google-plus" aria-hidden="true"></i>Google+</button> -->
	    </div>
	    <div class="info signup-info">
	      <span class="sign-via">Sign up via... </span>
	      <%= link_to user_google_oauth2_omniauth_authorize_path do %>
	      	<button class="social-network facebook"><i class="fa fa-google" aria-hidden="true"></i>Google</button>
	      <% end %>
	      <%= link_to user_facebook_omniauth_authorize_path do %>
	      	<button class="social-network twitter"><i class="fa fa-facebook" aria-hidden="true"></i>Facebook</button>
	      <% end %>

	    </div>
	</div>
</div>
