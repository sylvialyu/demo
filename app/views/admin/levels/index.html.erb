<div class="frame">

  <div class="pull-right" style="padding-bottom: 20px;">
    <%= link_to("Create a New Level", new_admin_level_path, class: "btn btn-primary btn-sm") %>
  </div>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Level Pic</th>
        <th>Level Name</th>
        <th>Go to Challenges</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      <% @levels.each do |level| %>
        <tr>
          <td>
            <%= link_to level_path(level) do %>
              <% if level.image.present? %>
                <%= image_tag(level.image.small.url) %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic") %>
              <% end %>
            <% end %>
          </td>
          <td><%= link_to(level.title, edit_admin_level_path(level)) %></td>
          <td><%= link_to("Challenges", admin_level_challenges_path(level), class: "btn btn-warning btn-xs") %></td>
          <td>
            <%= link_to("Edit", edit_admin_level_path(level), class: "btn btn-primary btn-xs") %>
            <%= link_to("Delete", admin_level_path(level), method: :delete, class: "btn btn-danger btn-xs", data: { confirm: "Are you sure?" }) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
