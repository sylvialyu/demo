<div class="group">
  <%= f.input :title, class: "form-control" %>
</div>

<div class="group">
  <%= f.input :subtitle, class: "form-control" %>
</div>

<div class="group">
  <%= f.input :goal, class: "form-control" %>
</div>

<div class="group">
  <%= f.input :content, as: :ckeditor, class: "form-control" %>
</div>

<div class="group">
  <%= f.input :task, class: "form-control" %>
</div>

<div class="group">
  <%= f.submit "Submit", data: {disable_with: "Submitting..."}, class: "btn btn-primary" %>
</div>
